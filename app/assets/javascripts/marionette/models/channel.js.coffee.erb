class MusicPlatform.Models.Channel extends Backbone.Model
  defaults:
    id: -1
    name: 'Channel'
    description: 'A music Channel'
    currentTrack: 'Soundtrack'
    is_playing: false
    playlist: []
    currentPage: ''
    totalPages: ''
    img150: "<%= image_url 'channels/defaults/img150.jpg' %>"
    img256: "<%= image_url 'channels/defaults/img256.jpg' %>"

  TogglePlay: ->
    if this.get('is_playing')
      this.PauseChannel()
    else
      this.PlayChannel()

  PauseChannel: ->
    MusicPlatformPlayer.pause(this)
    this.set 'is_playing', false

  PlayChannel: ->
    MusicPlatformPlayer.play(this)
    this.set 'is_playing', true


